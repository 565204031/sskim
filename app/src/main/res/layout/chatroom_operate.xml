<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/add_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/mmtitle_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群聊一下"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/liner_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp"
        android:onClick="createRoom" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/bind_mcontact_reco_friends" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="创建群聊"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
	    android:layout_height="0.8dp"
	    android:orientation="horizontal"
	    android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/liner_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp"
        android:onClick="joinRoom" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/auto_add_friend_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="加入群聊"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
	    android:layout_height="0.8dp"
	    android:orientation="horizontal"
	    android:background="#c0c0c0" />
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:background="@drawable/liner_select"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/chakan_qun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="查看群聊"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
	    android:layout_height="0.8dp"
	    android:orientation="horizontal"
	    android:background="#c0c0c0" />

    <ListView
        android:id="@+id/lv_rooms"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000" />

</LinearLayout>